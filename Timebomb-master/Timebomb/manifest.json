{
  "manifest_version": 2,
  "name": "T-Timer",
  "version": "1.0",
  "description": "Countdown timer extension",
   "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
    	"scripts/event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "T-Timer! This extension can create distraction",      
    "default_popup": "popup.html"
  },
  "permissions": [
  	"contextMenus"
  ]
}